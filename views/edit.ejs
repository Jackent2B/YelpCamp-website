<%  include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= camp.name %></h1>
        <div style="width: 30%; margin:30px auto;">
            <form action="/camp/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.image %>" name="camp[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.description %>" name="camp[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">submit!</button>
                </div>
            </form>
            <a href="/camp">Go Back</a>
        </div>
            
    </div>
</div>    

<% include partials/footer %>